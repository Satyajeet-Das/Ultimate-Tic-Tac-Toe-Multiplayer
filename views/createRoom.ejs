<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ultimate Tic Tac Toe</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/general.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%-include('./partials/header.ejs') %>
    <main class="d-flex flex-nowrap">
      <%-include('./partials/sidebar.ejs') %>
      <div class="btn-container">
          <form action="/game" method="post">
            <label for="player1-name">Your Name</label>
            <input id="player1-name" type="text" name="player1-name">
            <br>
            <label for="time-control">Time Control(in secs)</label>
            <input id="time-control" type="text" name="time-control">
            <br>
            <input id="X" type="radio" name="X-O" value="X">
            <label for="X-O">X</label>
            <br>
            <input id="O" type="radio" name="X-O" value="O">
            <label for="O">O</label>
            <br>
            <input id="random" type="radio" name="X-O" value="random">
            <label for="random">Random</label>

          </form>
          <button>Create Game</button>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
