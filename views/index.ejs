<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Ultimate Tic Tac Toe</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%-include('./partials/header.ejs') %>
    <main class="d-flex flex-nowrap">
      <%-include('./partials/sidebar.ejs') %>
      <div class="game-board">
        <div class="playing-grid">
          <% for(let i = 1; i <= 9; i++){ %>
          <div id="<%='sb-'+i%>" class="sub-grid">
            <div id="<%= i %>" class="big-box">
              <img
                style="z-index: 11"
                class="big-x"
                src="images/SVG/icon-x.svg"
                alt="big-x"
              />
              <img class="big-o" src="images/SVG/icon-o.svg" alt="big-o" />
            </div>
            <% for(let j = 1; j <= 9; j++){%> 
              <div id="<%= i+"-"+j %>" class="box">
            <div class="o-outline-container">
              <img src="images/SVG/icon-o-outline.svg" alt="o-outline" />
            </div>
            <div class="x-outline-container">
              <img src="images/SVG/icon-x-outline.svg" alt="x-outline" />
            </div>
            <div class="x-container">
              <img src="images/SVG/icon-x.svg" alt="x" />
            </div>
            <div class="o-container">
              <img src="images/SVG/icon-o.svg" alt="o" />
            </div>
          </div>
          <% } %>
        </div>
        <% }%>
      </div>
  
      <div class="player-info">
          <div id="player1" class="player-box">
            <div id="player1-name">Player 1</div>
            <div id="player1-time">02:00</div>
          </div>
        <div class="xo-turn">
          <img src="images/SVG/icon-x-default.svg" alt="x-default">
          <!-- <img src="images/SVG/icon-o-default.svg" alt="o-default"> -->
           <p>Turn</p>
        </div>
        <div id="player2" class="player-box">
          <div id="player2-name">Player 2</div>
          <div id="player2-time">02:00</div>
        </div>
      </div>
    </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script src="js/scripts.js"></script>
  </body>
</html>
